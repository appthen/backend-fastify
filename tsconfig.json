{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/functions/*"],
      "@@/*": ["src/*"],
      "nw-lafjs/*": ["src/utils/dao/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}